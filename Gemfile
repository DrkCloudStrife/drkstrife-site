gem 'webpacker', '~> 4.0.7'

gem 'pry-rails', '~> 0.3.6'
gem 'colored2', '~> 3.1.2'

gem 'puma', '~> 3.12.6'

# route utility
gem 'routing-filter', '~> 0.6.2'

# heroku assets
group :production do
  gem 'rails_serve_static_assets', '~> 0.0.5'
  gem 'rails_12factor'
end

# Use debugger
gem 'byebug', group: [:development, :test]

